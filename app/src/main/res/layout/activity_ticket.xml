<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="shmoop.mticket.TicketActivity">

    <include
        layout = "@layout/action_bar"
        android:id="@+id/action_bar"
        />

    <View
        android:id="@+id/action_bar_stroke"
        android:layout_below="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorAccent"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/colorBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar_stroke">
    <shmoop.mticket.ColorBarView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_centerHorizontal="true"
        custom:color1="@color/black"
        custom:color2="@color/colorAccent"
        custom:color3="@color/colorPrimaryDark"
        custom:height="75dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorBar"
        android:orientation="horizontal">

    <Button
        android:id="@+id/actionsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Actions"
        />

    <Button
        android:id="@+id/ticketInfoButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Ticket Info"
        />
    </LinearLayout>
</RelativeLayout>
